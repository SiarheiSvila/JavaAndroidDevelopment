<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/screenLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="215dp">

        <Button
            android:id="@+id/switchGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/green" />

        <Button
            android:id="@+id/switchRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/red" />

        <Button
            android:id="@+id/switchBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/blue" />

        <Button
            android:id="@+id/switchImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/image" />

        <Button
            android:id="@+id/switchYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/yellow" />

        <Button
            android:id="@+id/showDevelopers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDevelopers"
            android:text="@string/show_developers" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>